<div class="gallery">
    <div class="login-card">
        <h2 class="page-title">Sign Up!</h2>

        <form class="form signup-form">
            <div class="form-group">
                <label for="first-name">First name:</label>
                <input type="text" class="form-input" id="first-name" />
                <label for="last-name">Last name:</label>
                <input type="text" class="form-input" id="last-name" />
            </div>
            <div class="form-group">
                <label for="email-signup">Email:</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
                <label for="filename">Upload a profile picture:</label>
                <select name="filename" id="filename"></select>
            </div>
            <div class="form-group">
                <label for="date">Date of Birth:</label>
                <div name="date">
                <label for="month">Month:</label>
                <select name="month" id="month"></select>
                <label for="day">Day:</label>
                <select name="day" id="day"></select>
                <label for="year">Year:</label>
                <select name="year" id="year"></select>
                </div>
            </div>
            <div class="form-group">
                <label for="gender">Select gender:</label>
                <select name="gender" id="gender"></select>
            </div>
            <div class="form-group">
                <label for="location">What city are you in:</label>
                <input class="form-input" type="text" id="location" />
            </div>
            <div class="form-group">
                <label for="bio">Bio:</label>
                <input class="form-input" type="text" id="bio" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/signup.js"></script>